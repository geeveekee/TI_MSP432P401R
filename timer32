#include "msp.h"
int main(){
WDT_A->CTL = 0x5A80;
P1->DIR = BIT0;
P1->OUT = 0x00;
TIMER32_1->CONTROL = TIMER32_CONTROL_MODE |
TIMER32_CONTROL_SIZE;
TIMER32_1->LOAD = 0xB71B00;
NVIC->ISER[0] = 1<<(T32_INT1_IRQn & 31);
__enable_irq();
TIMER32_1->CONTROL |= TIMER32_CONTROL_ENABLE |
TIMER32_CONTROL_IE;
while(1);
}
void T32_INT1_IRQHandler(void)
{
P1->OUT ^= 1;
TIMER32_1->INTCLR = 0;
}
